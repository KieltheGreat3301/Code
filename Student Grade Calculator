#include <iostream>
#include <string>
using namespace std;

const int numSubjects = 5;

float calculateAverage(float g1, float g2, float g3, float g4, float g5) {
    return (g1 + g2 + g3 + g4 + g5) / numSubjects;
}

void programTitle(const string& title) {
    cout << "========================================" << endl;
    cout << "   " << title << endl;
    cout << "========================================" << endl;
    cout << "" << endl;
}

void profileSetup(const string& title) {
    cout << "===" << title << "==="  << endl;
}

int main() {
    string studentName, studentID;
    int studentAge, gradeLevel;
    double mathGrade, scienceGrade, englishGrade, historyGrade, artGrade;
    
    programTitle("STUDENT GRADE CALCULATOR");
    profileSetup("STUDENT PROFILE SETUP");
    
    cout << "Enter student name: ";
    getline(cin, studentName);
    
    
    return 0;
}
